{
  "name": "vue-flattener-2",
  "version": "1.0.0",
  "description": "Vue component flattener tool with webpack plugin and CLI support",
  "main": "src/index.js",
  "bin": {
    "vue-flatten": "src/cli.js"
  },
  "exports": {
    ".": "./src/index.js",
    "./webpack-plugin": "./webpack-plugin.js"
  },
  "scripts": {
