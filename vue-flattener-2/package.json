    "flatten": "node src/cli.js"
  },
  "keywords": ["vue", "flattener", "inline", "webpack", "plugin", "cli"],
  "author": "",
  "license": "ISC",
  "files": [
    "src/",
    "webpack-plugin.js",
    "README.md"
